<?xml version="1.0"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sys="clr-namespace:System;assembly=mscorlib">
	<sys:String x:Key="LOC_AU_SuppressNotification">折叠更新通知</sys:String>
    <sys:String x:Key="LOC_AU_AutoUpdate">自动下载更新，并为下次重开安排安装流程</sys:String>
	<sys:String x:Key="LOC_AU_Major">大版本</sys:String>
	<sys:String x:Key="LOC_AU_Minor">小版本</sys:String>
	<sys:String x:Key="LOC_AU_Build">构建</sys:String>
    <sys:String x:Key="LOC_AU_MajorTooltip" xml:space="preserve">要更新的大版本高于已安装扩展的大版本。
例如：从 1.2.1 到 2.0.1，而非从 1.2.1 到 1.3.0。</sys:String>
    <sys:String x:Key="LOC_AU_MinorTooltip" xml:space="preserve">要更新的小版本高于已安装扩展的小版本。
例如：从 1.2.1 到 1.3.2，而非从 1.2.1 到 2.3.0。</sys:String>
    <sys:String x:Key="LOC_AU_BuildTooltip" xml:space="preserve">要更新的构建版本高于已安装扩展的构建版本。
例如：从 1.2.1 到 1.2.2，而非从 1.2.1 到 1.3.0。</sys:String>
    <sys:String x:Key="LOC_AU_ShowSummary">启动时显示更新摘要</sys:String>
    <sys:String x:Key="LOC_AU_UpdateSummaryTitle">自动更新摘要</sys:String>
    <sys:String x:Key="LOC_AU_QueuedUpdatesLabel">排队的更新：</sys:String>
    <sys:String x:Key="LOC_AU_RestartOnLock">当 Windows 锁定时重开 Playnite</sys:String>
    <sys:String x:Key="LOC_AU_RestartOnLockTooltip">若计划安装更新，将在 Windows 锁定且无游戏运行时重开 Playnite。</sys:String>
    <sys:String x:Key="LOC_AU_HideUpdateButton">隐藏更新按钮</sys:String>
</ResourceDictionary>
